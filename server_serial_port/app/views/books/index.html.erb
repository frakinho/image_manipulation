<h1><%= @all_books %> Books</h1>


<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Barcode</th>
      <th>ID</th>
      <th>Weight</th>
      <th>Other Weight</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.image.url(:medium) %></td>
        <td><%= book.barcode %></td>
        <td><%= book.id %></td>
        <td><%= book.weight %></td>
        <td><%= book.other_weight %></td>
        <td><%= book.title %></td>
        <td><%= link_to 'Show', book ,:class=>"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_book_path(book), :class=>"btn btn-info"%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

